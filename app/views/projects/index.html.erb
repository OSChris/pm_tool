<h1>Projects Index</h1>
<div>
<%= form_tag projects_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>
<%= link_to "Create New Project", new_project_path %>
<br>
<% @projects.limit(10).each do |project| %>
  <h2><%= link_to project.title, project %></h2>
  <p><%= project.description %></p>
  <p>Due on: <%= project.due_date %></p>
  <br>
  <hr>
<% end %>

<% if more_pages %>
  <%= link_to "Previous Page", projects_path(:page => previous_page(@page), :pages => @pages) unless hide_previous %>
  <%= link_to "Next Page", projects_path(:page => next_page(@page, @pages), :pages => @pages) unless hide_next %>
<% end %>
